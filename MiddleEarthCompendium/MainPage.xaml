<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MiddleEarthCompendium.ViewModels"
             x:Class="MiddleEarthCompendium.MainPage"
             x:DataType="viewmodels:MainViewModel"
             Shell.NavBarIsVisible="False">

    <Grid>
        <!-- Background Map -->
        <Image Source="middleearth.png" 
               Aspect="AspectFill"/>

        <!-- Content -->
        <VerticalStackLayout VerticalOptions="Center" 
                             Padding="32"
                             Spacing="24">

            <!-- Title -->
            <Label Text="Middle-earth"
                   FontFamily="Ringbearer"
                   FontSize="48"
                   TextColor="{StaticResource Primary}"
                   HorizontalOptions="Center"/>

            <Label Text="Compendium"
                   FontFamily="Ringbearer"
                   FontSize="36"
                   TextColor="{StaticResource TextPrimary}"
                   HorizontalOptions="Center"
                   Margin="0,-16,0,32"/>

            <!-- Menu Buttons -->
            <Button Text="Characters"
                    Command="{Binding NavigateToCharactersCommand}"
                    BackgroundColor="{StaticResource CardBackground}"
                    TextColor="{StaticResource Primary}"
                    BorderColor="{StaticResource Primary}"
                    BorderWidth="2"
                    CornerRadius="8"
                    FontSize="20"
                    HeightRequest="60"/>

            <Button Text="Movies"
                    Command="{Binding NavigateToMoviesCommand}"
                    BackgroundColor="{StaticResource CardBackground}"
                    TextColor="{StaticResource Primary}"
                    BorderColor="{StaticResource Primary}"
                    BorderWidth="2"
                    CornerRadius="8"
                    FontSize="20"
                    HeightRequest="60"/>

            <Button Text="Quotes"
                    Command="{Binding NavigateToQuotesCommand}"
                    BackgroundColor="{StaticResource CardBackground}"
                    TextColor="{StaticResource Primary}"
                    BorderColor="{StaticResource Primary}"
                    BorderWidth="2"
                    CornerRadius="8"
                    FontSize="20"
                    HeightRequest="60"/>

        </VerticalStackLayout>
    </Grid>

</ContentPage>